{
  "rules": {
    "delete_dates": {
      "linkable": {
        "$room_id": {
          ".read": "auth.token.email_verified === true",
          ".write": "auth.token.email_verified === true && !data.exists()"
        }
      },
      "room": {
        "$room_id": {
          ".read": "auth.token.email_verified === true && root.child('rooms/' + $room_id + '/emails').val().contains(',' + auth.token.email + ',')",
          ".write": "auth.token.email_verified === true && !data.exists()"
        }
      }
    },
    "linkables": {
      "$room_id": {
        ".read": "auth.token.email_verified === true",
        "messages" : {
          "$message1_id": {
            ".validate": "!newData.child('author').exists() || newData.child('author').val() === auth.token.email",
            "children": {
              "$message2_id": {
                ".validate": "!newData.child('author').exists() || newData.child('author').val() === auth.token.email",
                "children": {
                  "$message3_id": {
                    ".validate": "!newData.child('author').exists() || newData.child('author').val() === auth.token.email",
                    "children": {
                      "$message4_id": {
                        ".validate": "!newData.child('author').exists() || newData.child('author').val() === auth.token.email",
                        "children": {
                          "$message5_id": {
                            ".validate": "(!newData.child('author').exists() || newData.child('author').val() === auth.token.email) && !newData.child('children').exists()"
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      },
      ".write": "auth.token.email_verified === true"
    },
    "rooms": {
      "$room_id": {
        ".read": "auth.token.email_verified === true && data.child('emails').val().contains(',' + auth.token.email + ',')",
        ".validate": "!data.child('emails').exists() || (data.child('emails').val().contains(',' + auth.token.email + ',') && newData.child('emails').val() === data.child('emails').val())",
        "messages" : {
          "$message1_id": {
            ".validate": "!newData.child('author').exists() || newData.child('author').val() === auth.token.email",
            "children": {
              "$message2_id": {
                ".validate": "!newData.child('author').exists() || newData.child('author').val() === auth.token.email",
                "children": {
                  "$message3_id": {
                    ".validate": "!newData.child('author').exists() || newData.child('author').val() === auth.token.email",
                    "children": {
                      "$message4_id": {
                        ".validate": "!newData.child('author').exists() || newData.child('author').val() === auth.token.email",
                        "children": {
                          "$message5_id": {
                            ".validate": "(!newData.child('author').exists() || newData.child('author').val() === auth.token.email) && !newData.child('children').exists()"
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      },
      ".write": "auth.token.email_verified === true"
    },
    "users": {
      "$uid": {
        ".read": "$uid === auth.uid",
        ".write": "$uid === auth.uid",
      }
    }
  }
}
